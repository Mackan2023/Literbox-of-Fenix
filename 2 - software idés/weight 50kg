#include <LiquidCrystal.h>
LiquidCrystal lcd(2, 3, 4, 5, 6,7);
float order=0;
float Value_Weight= 0; 
int pot_pin= A2;



void setup()
   {
    Serial.begin(9600);
    lcd.begin(16, 2);
    lcd.print("Weight    Order");
    lcd.setCursor(7,1);
    pinMode(8,OUTPUT);//red led
    pinMode(9,OUTPUT);//green led 
   }



void loop()
   { 
    int sensorValue = analogRead(pot_pin);//potentiometer  A2  
    order=map(sensorValue,0,466,0,105);
    Serial.println(order);
    lcd.setCursor(11,2);
    lcd.print(order);
    int reading = analogRead(A1); //sensor weight
    float voltage = reading * 5.0;
    voltage /=1024.0;
    Serial.println(analogRead(A1));
    lcd.setCursor(1,1);
    Value_Weight = round((voltage - 0.5) * 100);
    lcd.print(Value_Weight+50,1);
    delay(150);
    if (order  < Value_Weight+50 )
     {
      analogWrite(8 , 0);
      analogWrite(9 , 255);
     }
    if ( order  >  Value_Weight+50)
     {
      analogWrite(8 , 255);
      analogWrite(9 , 0);
     } 
   }


